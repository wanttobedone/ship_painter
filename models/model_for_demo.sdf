          <mesh>
            <uri>model://model_for_demo.dae</uri>
            <scale>1.0 1.0 1.0</scale>
          </mesh>
        </geometry>
      </collision>
      
      <!-- 物理属性 -->
      <inertial>
        <mass>2.409899</mass>
        <pose>0.999404 0.000000 0.003925 0 0 0</pose>
        <inertia>

              <ixx>1.612918</ixx>
              <ixy>0.0</ixy>
              <ixz>0.0</ixz>
              <iyy>8.042190</iyy>
              <iyz>0.0</iyz>
              <izz>8.035872</izz>
        </inertia>
      </inertial>
    </link>
  </model>
