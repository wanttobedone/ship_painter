<?xml version="1.0"?>
<sdf version="1.6">
  <model name="1">
    <pose>0 0 0 0 0 0</pose>
    <static>true</static>
    
    <link name="link">
      <!-- 视觉外观 -->
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://model_for_demo.dae</uri>
            <scale>1.0 1.0 1.0</scale>
          </mesh>
        </geometry>
        <!-- 棋盘格纹理材质 - 为VINS提供丰富特征点 -->
        <material>
          <ambient>1 1 1 1</ambient>
          <diffuse>1 1 1 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
